# Maintainer: anekos <anekos@snca.net>
pkgname=cam-git
pkgver=20130318
pkgrel=1
pkgdesc='a unix command for viewing images'
url='https://github.com/itchyny/cam'
arch=('i686' 'x86_64')
license=('MIT')
depends=('gcc')
optdepends=()
makedepends=()
conflicts=()
replaces=()
backup=()

source=()
md5sums=()

_gitroot='https://github.com/itchyny/cam.git'
_gitname='cam'

build () {
  cd $srcdir

  if [ -d "$_gitname" ]
  then
    cd $_gitname && git pull origin
  else
    git clone $_gitroot && cd $_gitname
  fi
  ./configure --prefix="$pkgdir/usr" && make
}

package () {
  cd $srcdir/$_gitname
  make install
}

# vim:set ts=2 sw=2 et:
